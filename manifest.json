{
  "manifest_version": 2,
  "name": "FocusX",
  "version": "1.0",
  "description": "View one tweet at a time on Twitter/X.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*",
        "*://*.x.com/*"
      ],
      "js": [
        "src/content.js"
      ]
    }
  ]
}